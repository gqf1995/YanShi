<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    android:background="@drawable/radio_layout_shap">
    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_gravity="center"
        android:textColor="@color/font_black_1"
        android:textSize="@dimen/bigsp"
        android:paddingTop="@dimen/bigmdp"
        android:paddingBottom="@dimen/bigmdp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/font_black_6"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ok_txt"
            android:layout_width="@dimen/hugehxxxxxdp"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/mediumsp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bottom_left_radio_light_dark_sel"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/font_black_6"/>
        <TextView
            android:id="@+id/canal_txt"
            android:layout_width="@dimen/hugehxxxxxdp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@drawable/dark_light_txt_color_sel"
            android:textSize="@dimen/mediumsp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bottom_right_radio_light_dark_sel"
            />
    </LinearLayout>

</LinearLayout>