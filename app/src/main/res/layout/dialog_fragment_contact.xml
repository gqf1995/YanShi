<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:minWidth="@dimen/hugehxxxxxxxxxdp"
        android:layout_height="wrap_content"
        android:background="@drawable/contact_dialog_bg_shap"
        android:layout_marginTop="@dimen/hugehxxxxxxxxxdp"
        android:paddingLeft="@dimen/smallmdp"
        android:paddingRight="@dimen/smallmdp"
        android:paddingBottom="@dimen/smallmdp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tinyhdp"
            android:textSize="@dimen/bigsp"
            android:textColor="@color/black"
            android:text="郭青枫"
            android:gravity="center"
            android:layout_margin="@dimen/mediummdp"
            />
        <TextView
            android:id="@+id/position_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tinyhdp"
            android:textSize="@dimen/mediumsp"
            android:textColor="@color/font_black_1"
            android:text="副部长"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="@dimen/smallmdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/smallhdp"
            android:orientation="horizontal"
           >

            <Button
                android:id="@+id/phone_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/tinymdp"
                android:background="@drawable/apply_for_selector"
                android:text="电话"
                android:textColor="@drawable/apply_for_text_color_selector"
                android:textSize="@dimen/smallsp"/>
            <Button
                android:id="@+id/sms_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/tinymdp"
                android:background="@drawable/apply_for_selector"
                android:text="短信"
                android:textColor="@drawable/apply_for_text_color_selector"
                android:textSize="@dimen/smallsp"/>
            <Button
                android:id="@+id/dimss_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/tinymdp"
                android:background="@drawable/apply_for_selector"
                android:text="取消"
                android:textColor="@drawable/apply_for_text_color_selector"
                android:textSize="@dimen/smallsp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>