<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/mediummdp"
    android:paddingLeft="@dimen/mediummdp"
    android:paddingRight="@dimen/mediummdp"
    android:layout_height="wrap_content"
    android:id="@+id/root_lin"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/hugehxxxdp"
                android:layout_height="match_parent"
                android:src="@drawable/tu2"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/mediumsp"
                android:paddingLeft="@dimen/smallmdp"
                android:textColor="@color/black"
                android:text="洛阳铁路，用自己的智慧和汗水，将“盲肠”变成了通途...."
                android:id="@+id/title_item" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/font_black_2"
                android:gravity="bottom"
                android:text="偃师市委办公室"
                android:textSize="@dimen/smallsp"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:text="2017/9/12 8:29"
                android:gravity="bottom"
                android:textStyle="bold"
                android:id="@+id/createTime"
                android:textSize="@dimen/smallsp"
                android:textColor="@color/lightsalmon"
                android:layout_height="20dp" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/smallmdp"
        android:background="@color/gary"/>
</LinearLayout>