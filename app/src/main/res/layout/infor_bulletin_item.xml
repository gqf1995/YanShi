<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:id="@+id/rel_root"
    android:layout_height="100dp">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="@drawable/in2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:id="@+id/item_ImageView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_ImageView"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="@dimen/mediumsp"
            android:text="市区举办突发地质灾害演练，洛阳武警冒雨练兵..."
            android:id="@+id/item_title_item"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/mediummdp"
            android:paddingBottom="@dimen/mediummxdp">
            <TextView
                android:layout_marginLeft="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="偃师市委办公室"
                android:gravity="bottom"
                android:textSize="@dimen/smallsp"
                android:textColor="@color/font_black_2"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/time_txt"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="2017/9/12 8:29"
                android:textStyle="bold"
                android:gravity="bottom|right"
                android:textSize="@dimen/smallsp"
                android:textColor="@color/lightsalmon"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>